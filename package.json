{
  "devDependencies": {
    "asar": "^0.10.0",
    "chai": "^3.5.0",
    "cross-env": "^2.0.0",
    "electron-mocha": "^2.3.1",
    "electron-prebuilt": "^1.3.1",
    "eslint": "2.3.0",
    "eslint-config-standard": "5.1.0",
    "eslint-plugin-promise": "1.1.0",
    "eslint-plugin-react": "^5.0.1",
    "eslint-plugin-standard": "1.3.2",
    "fs-jetpack": "^0.7.0",
    "gh-pages": "^0.11.0",
    "gulp": "^3.9.0",
    "gulp-util": "^3.0.6",
    "husky": "^0.11.4",
    "q": "^1.4.1",
    "rewire": "^2.5.1",
    "rollup": "^0.25.4",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "yargs": "^4.2.0"
  },
  "optionalDependencies": {
    "appdmg": "^0.3.2",
    "rcedit": "^0.5.0"
  },
  "scripts": {
    "prepush": "npm run lint && npm test",
    "postinstall": "npm run build && cd app && npm install",
    "build": "gulp build",
    "release": "gulp release --env=production",
    "start": "gulp start",
    "test": "cross-env NODE_ENV=test electron-mocha --recursive test",
    "lint": "eslint .",
    "install-native": "node ./tasks/install_native_module",
    "predocs:publish": "echo currentCommitSha: $(git rev-parse HEAD) >> docs/_config.yml",
    "postdocs:publish": "sed -i '' '/currentCommitSha/d' ./docs/_config.yml",
    "docs:publish": "gh-pages -t -d docs"
  }
}
